{
  "mcpServers": {
    "teloscript": {
      "command": "python",
      "args": ["/absolute/path/to/teloscript_mcp_server.py"],
      "transport": "stdio",
      "env": {
        "TELOSCRIPT_API_URL": "http://localhost:8000"
      }
    },
    "teloscript-remote": {
      "command": "python",
      "args": ["/absolute/path/to/teloscript_mcp_server.py", "--api-url", "http://remote-server:8000"],
      "transport": "stdio",
      "env": {
        "TELOSCRIPT_API_URL": "http://remote-server:8000"
      }
    },
    "teloscript-specialized": {
      "command": "python", 
      "args": ["/absolute/path/to/teloscript_mcp_server.py", "--api-url", "http://specialized-teloscript:8000"],
      "transport": "stdio",
      "env": {
        "TELOSCRIPT_API_URL": "http://specialized-teloscript:8000"
      }
    }
  }
}